<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Page1Controller">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Chargement Fichier CSV" textFill="white" />
                <Button fx:id="preferencesButton" onAction="#onPreferencesClicked" style="-fx-background-color: #3498DB; -fx-text-fill: white;" text="Préférences" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
            <Label text="Il faut mettre le fichier csv dans le dossier res" />
            <TextField fx:id="cheminCSV" maxWidth="400.0" promptText="Entrer le nom du fichier CSV..." />
            <Button id="importer" onAction="#ouvertureCSV" text="Importer" />
            <TextField fx:id="rechercheAdo" onKeyReleased="#rechercheAdolescent" prefHeight="25.0" prefWidth="381.0" promptText="Recherche d'ado avec nom prénom" />
            <HBox alignment="CENTER" prefHeight="502.0" prefWidth="660.0" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="47.0" text="FRANCE" />
                        <TableView fx:id="fichierCSVFrance">
                          <columns>
                              <TableColumn fx:id="colFORENAME1" prefWidth="150.0" text="FORENAME" />
                              <TableColumn fx:id="colNAME1" prefWidth="150.0" text="NAME" />
                              <TableColumn fx:id="colBIRTH_DATE1" prefWidth="150.0" text="BIRTH_DATE" />
                          </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="35.0" text="ITALIE" />
                        <TableView fx:id="fichierCSVItalie">
                          <columns>
                              <TableColumn fx:id="colFORENAME2" prefWidth="150.0" text="FORENAME" />
                              <TableColumn fx:id="colNAME2" prefWidth="150.0" text="NAME" />
                              <TableColumn fx:id="colBIRTH_DATE2" prefWidth="150.0" text="BIRTH_DATE" />
                          </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="Rechercher" mnemonicParsing="false" onAction="#rechercheAppariement" text="Rechercher" />
            </children>
        </VBox>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
            </padding>
            <children>

                <TitledPane expanded="true" text="Filtres">
                    <content>
                        <VBox prefHeight="207.0" prefWidth="281.0" spacing="10.0">
                            <children>
                                <HBox spacing="10.0">
                                    <Label prefHeight="17.0" prefWidth="121.0" text="Allergie animaux " />
                                    <CheckBox fx:id="allergieOui" text="Oui" />
                                    <CheckBox fx:id="allergieNon" text="Non" />
                                </HBox>
                        <HBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="121.0" text="L'hôte a un animal" />
                              <CheckBox fx:id="animalOui" text="Oui" />
                              <CheckBox fx:id="animalNon" text="Non" />
                           </children>
                        </HBox>
                        <HBox layoutX="20.0" layoutY="47.0" spacing="10.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="80.0" text="genre voulu" />
                              <CheckBox fx:id="pairGenreF" text="F" />
                              <CheckBox fx:id="pairGenreM" text="M" />
                              <CheckBox fx:id="pairGenreOther" text="other" />
                           </children>
                        </HBox>
                        <HBox layoutX="20.0" layoutY="74.0" spacing="10.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="80.0" text="genre" />
                              <CheckBox fx:id="genreF" text="F" />
                              <CheckBox fx:id="genreM" text="M" />
                              <CheckBox fx:id="genreOther" text="other" />
                           </children>
                        </HBox>
                                <Button fx:id="appliquerFiltre" onAction="#appliquerFiltre" text="Appliquer" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane expanded="true" text="Fonctionnalités">
                    <content>
                        <VBox spacing="10.0">
                            <children>
                                <Button fx:id="suppressionAppariement" onAction="#suppressionAppariement" prefHeight="25.0" prefWidth="180.0" text="Suppression d'un appariement" />
                                <Button fx:id="suppressionAdolescent" onAction="#suppressionAdolescent" prefHeight="25.0" prefWidth="180.0" text="Suppression d'un adolescent" />
                        <Button fx:id="forcageAppariement" layoutX="20.0" layoutY="55.0" onAction="#forcageAppariement" prefHeight="25.0" prefWidth="180.0" text="Appariement de force" />
                        <Button fx:id="appariementAutomatique" layoutX="20.0" layoutY="90.0" onAction="#appariementAutomatique" prefHeight="25.0" prefWidth="180.0" text="Appariement automatique" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>

            </children>
        </VBox>
    </right>
</BorderPane>
